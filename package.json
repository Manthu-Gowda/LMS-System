{
  "name": "lms-system",
  "version": "1.0.0",
  "description": "Complete Learning Management System",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "build": "npm run build --workspace=client && npm run build --workspace=server",
    "seed": "npm run seed --workspace=server",
    "test": "npm run test --workspace=server && npm run test --workspace=client",
    "start": "npm run start --workspace=server",
    "clean": "rm -rf client/dist server/dist */node_modules node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "LMS Team",
  "license": "MIT"
}